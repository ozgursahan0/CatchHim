<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oyunekran">


    <ImageView
        android:id="@+id/napim"
        android:layout_width="480dp"
        android:layout_height="399dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/exitButton"
        app:srcCompat="@drawable/napim" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="410dp"
        android:layout_height="535dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingClass">

        <ImageView
            android:id="@+id/burak1"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/a"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />

        <ImageView
            android:id="@+id/burak2"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/b"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak3"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/c"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

        <ImageView
            android:id="@+id/burak4"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/d"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak5"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/e"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak6"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/f"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck,ImageContrastCheck" />

        <ImageView
            android:id="@+id/burak7"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/g"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak8"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/h"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak9"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/burak"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak10"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/j"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak11"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/k"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/burak12"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:onClick="changeScore"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/l"
            tools:ignore="SpeakableTextPresentCheck" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="146dp"
        android:layout_height="36dp"
        android:text="Left: "
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:text="Your Score: 0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:onClick="restart"
        android:text="RESTART"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:onClick="menu"
        android:text="MENU"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />

    <TextView
        android:id="@+id/topscoreText"
        android:layout_width="225dp"
        android:layout_height="25dp"
        android:text="Top Score: "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:onClick="reset"
        android:text="RESET"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="@+id/topscoreText"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/topscoreText"
        app:layout_constraintTop_toTopOf="@+id/topscoreText"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>